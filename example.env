# Paystack API Configuration
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_BASE_URL=https://api.paystack.co

# Application Configuration
APP_NAME=TizLion AI Banking CLI App
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# FastAPI Configuration
# For VPS/WhatsApp set API_HOST=0.0.0.0 so Twilio can reach the webhook.
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=true
# API_BASE_URL: Base URL for receipt images and webhooks. Production: use HTTPS URL.
API_BASE_URL=http://127.0.0.1:8000

# CLI Configuration
CLI_THEME=dark
DEFAULT_CURRENCY=NGN
DEFAULT_AMOUNT=50000

# Database Configuration (SQLite fallback)
DATABASE_URL=sqlite:///./paystack_app.db

# MongoDB Atlas Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
MONGODB_DATABASE=payant

# OpenRouter Configuration (for AI features)
OPENROUTER_API_KEY=sk-or-v1-your_api_key_here
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_SITE_URL=https://your-site.com
OPENROUTER_SITE_NAME=Paystack WhatsApp Agent

# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Webhook Configuration (required for WhatsApp on VPS)
# Set this to the PUBLIC HTTPS URL Twilio will call. Twilio requires HTTPS.
# Examples: https://your-domain.com/whatsapp/webhook or https://xxx.ngrok.io/whatsapp/webhook
# In Twilio Console set "When a message comes in" to this same URL.
WEBHOOK_URL=https://your-domain.com/whatsapp/webhook
# Note: WEBHOOK_SECRET is defined but not currently used in code
# Twilio webhook signature validation uses TWILIO_AUTH_TOKEN directly
WEBHOOK_SECRET=your_webhook_secret_key_here

# Telegram Bot (optional chat interface). Set webhook URL in BotFather to https://<your-domain>/telegram/webhook
# TELEGRAM_WEBHOOK_SECRET=optional secret; if set, validate X-Telegram-Bot-Api-Secret-Token header
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
API_KEY=your_api_key_here  # Required for accessing /api/* endpoints (set a strong random key)
# CORS_ORIGINS: For WhatsApp-only deployment, set to empty array []
# For production: CORS_ORIGINS=[]
# For local development with frontend: CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:8000"]
CORS_ORIGINS=[]
REQUIRE_CONFIRMATION=true

# OCR Configuration (optional)
TESSERACT_PATH=
SUPPORTED_IMAGE_FORMATS=["jpeg", "jpg", "png", "bmp", "gif", "tiff"]

# Logging
LOG_FILE=logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

